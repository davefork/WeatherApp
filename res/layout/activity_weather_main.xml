<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/weather_info_layout"
    >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	   	>
		 <com.example.myview.LineGridView
		        android:id="@+id/two_day_info"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_marginTop="5dp"
		        android:verticalSpacing="1dp"
		        android:horizontalSpacing="1dp"
		        android:numColumns="2" 
		        android:listSelector="@drawable/exponente_selector">
		    </com.example.myview.LineGridView>
	        <TextView 
	        android:id="@+id/wind_level"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/two_day_info"
	        android:textColor="#ffffffff"
	        android:textSize="25px"
	        android:text="1级风"
	        android:layout_marginBottom="5dp"/>
	
	        <TextView 
	        android:id="@+id/weather_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/two_day_info"
	        android:layout_toRightOf="@id/wind_level"
	        android:textColor="#ffffffff"
	        android:layout_marginLeft="10dp"
	        android:textSize="25px"
	        android:text="阵雨转中雨"
	         android:layout_marginBottom="5dp"/>
		   <TextView
		        android:id="@+id/degree"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@id/wind_level"
		        android:textColor="#ffffffff"
		        android:textSize="45px"
		        android:text="29°"/>
	    
	    
		
	</RelativeLayout>
</FrameLayout>
