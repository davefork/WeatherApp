<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <TextView android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_marginLeft="3dp"
        android:textColor="#ffffffff"
        />
    <TextView android:id="@+id/degreeRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="3dp"
        android:layout_below="@id/day"
        android:textColor="#ffffffff"
        />
    <TextView android:id="@+id/grid_weather_desc"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="#ffffffff"
        />
    <ImageView android:id="@+id/weatherImg"
        android:layout_below="@id/grid_weather_desc"
        android:layout_alignParentRight="true"
        android:layout_width="15dp" 
        android:layout_height="15dp"
         android:layout_marginRight="5dp"
        android:src="@drawable/pic_id"/>"

</RelativeLayout>
